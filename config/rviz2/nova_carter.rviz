Panels:
  - Class: rviz_common/Displays
    Help Height: 480
    Name: Displays

  - Class: rviz_common/Displays
    Help Height: 480
    Name: Displays

Displays:
  - Class: rviz/PointCloud2
    Help Height: 400
    Name: PointCloud2
    
    - Class: rviz/RobotModel
    Help Height: 400
    Name: RobotModel
    
    - Class: nav_msgs/Odometry
    Help Height: 400
    Name: Odometry
    
    - Class: sensor_msgs/Image
    Help Height: 400
    Name: Image
    
    - Class: nav_msgs/OccupancyGrid
    Help Height: 400
    Name: OccupancyGrid

Visualization Manager:
  Class: rviz/VisualizationManager
  Name: Visualization Manager

Preferences:
  - Class: rviz_common/Preferences
    Name: Preferences

Tool Properties:
  - Class: rviz/Tool Properties
    Name: Tool Properties
    - Property tree style: 1
    - Property tree show all: 1
    - Show help: 1

