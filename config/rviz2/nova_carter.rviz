# PointCloud2 Display (/front_3d_lidar/lidar_points)
Class: rviz/PointCloud2
Name: Nova Carter 3D LiDAR
Topic: /front_3d_lidar/lidar_points
Name: Nova_Carter_3D_LiDAR_Qt

# Size (m)
Class: rviz/PointCloud2
Name: Nova Carter LiDAR Size
Value: 20

# Style
Class: rviz/PointCloud2
Name: Nova Carter LiDAR Style
Value: Flat Shading

# Color Transformer
Class: rviz/PointCloud2
Name: Nova Carter Color Transformer
Value: AxisColor

# Position Transformer
Class: rviz/PointCloud2
Name: Nova Carter Position Transformer
Value: XYZ

# Auto Size
Class: rviz/PointCloud2
Name: Nova Carter Auto Size
Value: false

-----

# Odometry Display (/chassis/odom)
Class: nav_msgs/Odometry
Name: Nova Carter Odometry
Topic: /chassis/odom
Name: Nova_Carter_Odometry_Qt

# Shape
Class: rviz/Odometry
Name: Shape
Value: Arrow

# Color
Class: rviz/Odometry
Name: Color
Value: 255; 85; 0

# Keep
Class: rviz/Odometry
Name: Keep
Value: 100

-----

# Image Display (/front_stereo_camera/left/image_raw)
Class: sensor_msgs/Image
Name: Nova Carter RGB Camera
Topic: /front_stereo_camera/left/image_raw
Name: Nova_Carter_Camera_Qt

# Image Rendering
Class: sensor_msgs/Image
Name: Image Rendering
Value: bilinear

# Transport Hint
Class: sensor_msgs/Image
Name: Transport Hint
Value: raw

# Queue Size
Class: sensor_msgs/Image
Name: Queue Size
Value: 10

# Min Value
Class: sensor_msgs/Image
Name: Min Value
Value: 0

# Max Value
Class: sensor_msgs/Image
Name: Max Value
Value: 255

